/* We provide a min-width and min-height for push buttons   so that they look elegant regardless of the width of the text. */QPushButton {color: #333;border: 2px solid #555;border-radius: 11px;padding: 5px;background: qradialgradient(cx: 0.3, cy: -0.4,fx: 0.3, fy: -0.4,radius: 1.35, stop: 0 #fff, stop: 1 #888);min-width: 2px;}QPushButton:hover {  background: qradialgradient(cx: 0.3, cy: -0.4,fx: 0.3, fy: -0.4,radius: 1.35, stop: 0 #fff, stop: 1 #bbb);}/* Increase the padding, so the text is shifted when the button is   pressed. */QPushButton:pressed {background: qradialgradient(cx: 0.4, cy: -0.1,fx: 0.4, fy: -0.1,radius: 1.35, stop: 0 #fff, stop: 1 #ddd);}QListView{	border: 2px solid #555;	background-color: qlineargradient(spread:pad, x1:0.46, y1:1, x2:0.483, y2:0.505727, stop:0 rgba(158, 151, 157, 255), stop:1 rgba(206, 204, 206, 255));border-radius: 11px;padding: 5px;}QTextEdit{	border: 2px solid #555;	background-color: qlineargradient(spread:pad, x1:0.46, y1:1, x2:0.483, y2:0.505727, stop:0 rgba(158, 151, 157, 255), stop:1 rgba(206, 204, 206, 255));border-radius: 11px;padding: 5px;	font: 8pt "MS Sans Serif";}QLineEdit{color: #333;border: 2px solid #555;border-radius: 11px;padding: 5px;background: qradialgradient(cx: 0.3, cy: -0.4,fx: 0.3, fy: -0.4,radius: 1.35, stop: 0 #fff, stop: 1 #888);min-width: 2px;}